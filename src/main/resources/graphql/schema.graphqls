type Query {
    # User queries
    currentUser: User
    users: [User!]!
    user(id: ID!): User

    # Bookmark queries
    bookmarks: [Bookmark!]!
    bookmarksConnection(first: Int, after: String): BookmarkConnection!
    bookmark(id: ID!): Bookmark
    bookmarksByCategory(categoryId: ID!): [Bookmark!]!
    searchBookmarks(query: String!): [Bookmark!]!

    # Advanced search with filters
    advancedSearch(filter: BookmarkFilterInput!): [Bookmark!]!

    # Favorites
    favoriteBookmarks: [Bookmark!]!

    # Tag-based queries
    bookmarksByTag(tagName: String!): [Bookmark!]!

    # Visit-based queries
    mostVisitedBookmarks(limit: Int): [Bookmark!]!
    recentlyVisitedBookmarks(limit: Int): [Bookmark!]!

    # High-rated bookmarks
    topRatedBookmarks(minRating: Int!): [Bookmark!]!

    # Category queries
    categories: [Category!]!
    category(id: ID!): Category

    # Tag queries
    tags: [Tag!]!
    tag(id: ID!): Tag

    # Statistics
    bookmarkStatistics: BookmarkStatistics!
    categoryStatistics: [CategoryStatistics!]!

    # URL Metadata
    fetchUrlMetadata(url: String!): UrlMetadata!
}

type Subscription {
    # Real-time bookmark updates via WebSocket
    bookmarkChanged: Bookmark!
    bookmarkCreated: Bookmark!
    bookmarkUpdated: Bookmark!
    bookmarkDeleted: ID!
}

type Mutation {
    # Authentication mutations
    signup(input: SignupInput!): AuthPayload!
    login(input: LoginInput!): AuthPayload!
    logout: Boolean!

    # Bookmark mutations
    createBookmark(input: CreateBookmarkInput!): Bookmark!
    updateBookmark(id: ID!, input: UpdateBookmarkInput!): Bookmark!
    deleteBookmark(id: ID!): Boolean!

    # Smart bookmark creation with auto-metadata fetch
    createBookmarkFromUrl(input: CreateBookmarkFromUrlInput!): Bookmark!
    refreshMetadata(id: ID!): Bookmark!

    # Bookmark actions
    recordVisit(id: ID!): Bookmark!
    toggleFavorite(id: ID!): Bookmark!
    setRating(id: ID!, rating: Int!): Bookmark!
    addTagToBookmark(bookmarkId: ID!, tagId: ID!): Bookmark!
    removeTagFromBookmark(bookmarkId: ID!, tagId: ID!): Bookmark!

    # Category mutations
    createCategory(input: CreateCategoryInput!): Category!
    updateCategory(id: ID!, input: UpdateCategoryInput!): Category!
    deleteCategory(id: ID!): Boolean!

    # Tag mutations
    createTag(input: CreateTagInput!): Tag!
    updateTag(id: ID!, input: UpdateTagInput!): Tag!
    deleteTag(id: ID!): Boolean!
}

type User {
    id: ID!
    username: String!
    email: String!
    role: String!
    enabled: Boolean!
    createdAt: String!
    updatedAt: String!
}

type AuthPayload {
    user: User!
    message: String!
}

type Bookmark {
    id: ID!
    title: String!
    url: String!
    description: String
    category: Category
    user: User!
    tags: [Tag!]!
    isFavorite: Boolean!
    rating: Int
    visitCount: Int!
    lastVisitedAt: String
    isPublic: Boolean!
    # URL Metadata fields
    thumbnailUrl: String
    faviconUrl: String
    siteName: String
    author: String
    publishedDate: String
    metadataFetched: Boolean!
    createdAt: String!
    updatedAt: String!
}

type Category {
    id: ID!
    name: String!
    description: String
    bookmarks: [Bookmark!]!
}

type Tag {
    id: ID!
    name: String!
    color: String
    bookmarks: [Bookmark!]!
}

type BookmarkStatistics {
    totalBookmarks: Int!
    totalFavorites: Int!
    totalVisits: Int!
    averageRating: Float!
    totalCategories: Int!
    totalTags: Int!
}

type CategoryStatistics {
    categoryId: ID!
    categoryName: String!
    bookmarkCount: Int!
}

input SignupInput {
    username: String!
    password: String!
    email: String!
}

input LoginInput {
    username: String!
    password: String!
}

input CreateBookmarkInput {
    title: String!
    url: String!
    description: String
    categoryId: ID
    tagIds: [ID!]
    isFavorite: Boolean
    rating: Int
    isPublic: Boolean
}

input UpdateBookmarkInput {
    title: String
    url: String
    description: String
    categoryId: ID
    tagIds: [ID!]
    isFavorite: Boolean
    rating: Int
    isPublic: Boolean
}

input CreateCategoryInput {
    name: String!
    description: String
}

input UpdateCategoryInput {
    name: String
    description: String
}

input CreateTagInput {
    name: String!
    color: String
}

input UpdateTagInput {
    name: String
    color: String
}

input BookmarkFilterInput {
    query: String
    categoryId: ID
    tagName: String
    isFavorite: Boolean
    minRating: Int
    isPublic: Boolean
}

type UrlMetadata {
    title: String
    description: String
    thumbnailUrl: String
    faviconUrl: String
    siteName: String
    author: String
    publishedDate: String
    url: String!
}

input CreateBookmarkFromUrlInput {
    url: String!
    categoryId: ID
    tagIds: [ID!]
    isFavorite: Boolean
    isPublic: Boolean
    fetchMetadata: Boolean
}

# Relay Cursor Connection types for pagination
type BookmarkConnection {
    edges: [BookmarkEdge!]!
    pageInfo: PageInfo!
    totalCount: Int!
}

type BookmarkEdge {
    node: Bookmark!
    cursor: String!
}

type PageInfo {
    hasNextPage: Boolean!
    hasPreviousPage: Boolean!
    startCursor: String
    endCursor: String
}
